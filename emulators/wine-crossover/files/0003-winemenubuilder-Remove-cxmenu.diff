-static BOOL cx_link_is_64_bit(IShellLinkW *sl, int recurse_level)
-{
-    HRESULT hr;
-    WCHAR temp[MAX_PATH];
-    WCHAR path[MAX_PATH];
-    const WCHAR *ext;
