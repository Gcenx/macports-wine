PortSystem          1.0
PortGroup           muniversal 1.1

name                gst-libmpeg2
version             0.5.1
revision            0
categories          multimedia
license             GPL-2+
maintainers         {@gcenx}
homepage            http://libmpeg2.sourceforge.net/
description         A free library for decoding mpeg-2 and mpeg-1 video streams.
long_description    libmpeg2 is a free library for decoding \
                    mpeg-2 and mpeg-1 video streams.  The main \
                    goals in libmpeg2 development are \
                    conformance, speed, portability, and reuseability.
platforms           darwin
master_sites        ${homepage}files/

checksums           rmd160  00b2d669655ed3f7a176f5eecc925045159a0301 \
                    sha256  dee22e893cb5fc2b2b6ebd60b88478ab8556cb3b93f9a0d7ce8f3b61851871d4 \
                    size    524776

use_autoreconf      yes
autoreconf.args     -fiv

configure.args      --prefix=${prefix}/libexec/gstreamer \
                    --enable-shared \
                    --disable-sdl \
                    --without-x \
                    --mandir=${prefix}/libexec/gstreamer/share/man

configure.cflags-append \
                    -std=gnu89

livecheck.type      regex
livecheck.url       ${homepage}downloads.html
livecheck.regex     "${name}-(\\d+(?:\\.\\d+)*)${extract.suffix}"
