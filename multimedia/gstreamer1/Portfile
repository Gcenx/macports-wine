        -Dd3dvideosink=disabled \
        -Dd3d11=disabled \
        -Ddash=disabled \
        -Ddc1394=disabled \
        -Ddecklink=disabled \
        -Ddirectfb=disabled \
        -Ddirectsound=disabled \
        -Ddtls=disabled \
        -Ddts=disabled \
