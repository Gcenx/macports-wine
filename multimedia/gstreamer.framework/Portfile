PortSystem          1.0
PortGroup           github 1.0

github.setup        Kegworks-App gstreamer 1.24.11
github.tarball_from releases
revision            0

name                ${github.project}.framework
categories          multimedia
maintainers         {@Gcenx}
description         GStreamer is a streaming media framework
long_description    {*}${description}

supported_archs     x86_64
platforms           {darwin >= 17}
license             LGPL-2+

homepage            https://gstreamer.freedesktop.org
dist_subdir         ${github.project}

distname            ${name}-1.0-${github.version}-x86_64
use_xz              yes

checksums           rmd160  ae1962a5bf27f2e3aed06bbefd62cea00abd3f19 \
                    sha256  88161d5dbd00ee0b28693be8cf711c3e1af15864a1722c0c9ec992bdb17f4a06 \
                    size    143607812

use_configure       no
build {}

destroot {
    copy ${workpath}/GStreamer.framework ${destroot}${frameworks_dir}
    system -W ${destroot}${frameworks_dir} \
        "codesign --force --deep --sign - GStreamer.framework"
}
