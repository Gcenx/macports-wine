PortSystem                  1.0
PortGroup                   github 1.0
PortGroup                   cmake 1.1

github.setup                4creators jxrlib 2019.10.9 v
version                     1.1
name                        jxrlib
categories                  graphics
maintainers                 openmaintainer
license                     BSD

platforms                   darwin
description                 Open source implementation of jpegxr
long_description            ${description}

checksums                   rmd160  8d33229579aa1915e765ed3d28e950b26b9184e8 \
                            sha256  555c006e27c5cb66f99c05dcbb2feb197199ca9018dbd06d3467d37cd29a79cd \
                            size    346116

github.tarball_from         archive

# jxrlib v1.1 doesn't have a make 'install' target
# make also doesn't produce dylib
post-extract {
    file copy ${filespath}/CMakeLists.txt ${worksrcpath}/CMakeLists.txt
    reinplace s|@VERSION@|${version}|g ${worksrcpath}/CMakeLists.txt
}

# CMakeLists.txt doesn't install the provided jxrlib.pc.in file
# instead of fixing the jxrlib.pc.in to work with CMakeLists.txt copy
# in our own and reinplace the Macports install location & version
post-destroot {
    file copy ${filespath}/jxrlib.pc ${workpath}/jxrlib.pc
    reinplace s|@PREFIX@|${prefix}|g ${workpath}/jxrlib.pc
    reinplace s|@VERSION@|${version}|g ${workpath}/jxrlib.pc
    xinstall -m 644 ${workpath}/jxrlib.pc ${destroot}${prefix}/lib/pkgconfig/jxrlib.pc
}
